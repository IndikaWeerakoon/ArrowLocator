<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:id="@+id/bottom_sheet"
    android:background="@color/white"
    android:orientation="vertical"
    app:behavior_hideable="true"
    android:fitsSystemWindows="true"
    app:behavior_peekHeight="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/bs_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:layout_weight="1"
                android:text="Anuradhapura Temple Sthupa"
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"/>
            <Button
                android:id="@+id/navigate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_blue"
                android:paddingHorizontal="4dp"
                android:drawablePadding="2dp"
                android:drawableLeft="@drawable/navigate_icon"
                android:background="@drawable/button_shape_round"
                android:text="Navigate"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/gray"/>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/image_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/colombo_city_hotel"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:text="Deccription : "/>

                <TextView
                    android:id="@+id/description_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:textAlignment="gravity"
                    android:textSize="15dp"
